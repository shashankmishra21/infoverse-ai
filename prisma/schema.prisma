generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(uuid())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())
  users     User[]
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  companyId String
  createdAt DateTime @default(now())
  company   Company  @relation(fields: [companyId], references: [id])
}

model Document {
  id         String          @id @default(uuid())
  companyId  String
  uploadedBy String
  fileName   String
  status     String          @default("PROCESSING")
  createdAt  DateTime        @default(now())
  chunks     DocumentChunk[]

  @@index([companyId])
}

model DocumentChunk {
  id         String                @id @default(uuid())
  documentId String
  companyId  String
  content    String
  chunkIndex Int
  embedding  Unsupported("vector")
  createdAt  DateTime              @default(now())
  document   Document              @relation(fields: [documentId], references: [id])

  @@index([companyId])
  @@index([documentId])
}

model Chat {
  id        String    @id @default(uuid())
  userId    String
  companyId String
  question  String
  answer    String
  createdAt DateTime? @default(now()) @db.Timestamp(6)

  @@index([companyId])
  @@index([createdAt])
  @@index([userId])
}

enum Role {
  ADMIN
  USER
}
